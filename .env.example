# =============================================================================
# TICKET PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ticket_platform?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ticket_platform

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# API SERVER
# =============================================================================
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Allow guest checkout
ALLOW_GUESTS=true

# Booking expiration time (in minutes)
BOOKING_EXPIRATION_MINUTES=10

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# =============================================================================
# PAYME INTEGRATION
# =============================================================================
# Get credentials from https://merchant.payme.uz
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
PAYME_TEST_SECRET_KEY=your-payme-test-secret-key
PAYME_CALLBACK_URL=http://localhost:3001/api/payments/payme/callback
PAYME_RETURN_URL=http://localhost:3000/payment/result

# Set to "true" for sandbox mode
PAYME_SANDBOX=true

# =============================================================================
# CLICK INTEGRATION
# =============================================================================
# Get credentials from https://my.click.uz
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_MERCHANT_USER_ID=your-click-merchant-user-id
CLICK_CALLBACK_URL=http://localhost:3001/api/payments/click
CLICK_RETURN_URL=http://localhost:3000/payment/result

# Set to "true" for sandbox mode
CLICK_SANDBOX=true

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ticket-platform.local

# =============================================================================
# ADMIN TOOLS (Docker profiles)
# =============================================================================
PGADMIN_EMAIL=admin@ticket.local
PGADMIN_PASSWORD=admin

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
